<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/gray_light"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícone de status -->
        <androidx.cardview.widget.CardView
            android:id="@+id/status_icon_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/success"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_prescription_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>

        <!-- Informações da receita -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_prescription_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receita Info"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_prescription_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data: 01/04/2025"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_prescription_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. João Silva"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Indicador de seta -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>