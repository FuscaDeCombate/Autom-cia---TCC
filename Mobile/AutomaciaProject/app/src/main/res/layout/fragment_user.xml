<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header com foto do perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Botão voltar -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/back_icon_description" />

            <!-- Foto do perfil -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    android:background="@color/gray_light"
                    android:contentDescription="@string/user_icon_description" />

            </androidx.cardview.widget.CardView>

            <!-- Botão para alterar foto -->
            <TextView
                android:id="@+id/tv_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alterar_foto"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_camera"
                android:drawablePadding="8dp"
                android:drawableTint="@color/white" />

        </LinearLayout>

        <!-- Card com informações do usuário -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo Nome -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nome_completo"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo CPF -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cpf"
                        android:inputType="number"
                        android:enabled="false"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:enabled="false"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Telefone -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_telefone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/telefone"
                        android:inputType="phone"
                        android:enabled="false"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Nome Social -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nome_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nome_social"
                        android:inputType="textPersonName"
                        android:enabled="false"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Container dos botões - Preparado para animação lado a lado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Container horizontal para os botões lado a lado -->
            <LinearLayout
                android:id="@+id/ll_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Botão Editar/Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_editar"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="@string/editar"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/btn_gradient_primary"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_edit"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    android:elevation="4dp"
                    app:cornerRadius="12dp"
                    android:stateListAnimator="@null" />

                <!-- Espaçamento entre os botões -->
                <View
                    android:id="@+id/view_spacing"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:visibility="gone" />

                <!-- Botão Salvar (inicialmente com width 0 para animação) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_salvar"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="0"
                    android:text="@string/salvar_alteracoes"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:background="@drawable/btn_gradient_success"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="start"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    android:elevation="4dp"
                    app:cornerRadius="12dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>